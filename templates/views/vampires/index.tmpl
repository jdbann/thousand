{{ template "base" . }}

{{ define "main" }}
  <div id="newVampire">
    <form method="POST" action="{{ $.Reverse "create-vampire" }}" class="stack">
      <div class="stack stack-small">
        <label for="name">Name</label>
        <input id="name" name="name" type="text" />
      </div>

      <input type="submit" value="Create Vampire" />
    </form>
  </div>

  <div id="vampires">
    {{ with .Data.vampires }}
      <ul>
        {{ range . }}
          <li><a href="{{ $.Reverse "show-vampire" .ID }}">{{ .Name }}</a></li>
        {{ end }}
      </ul>
    {{ end }}
  </div>
{{ end }}
